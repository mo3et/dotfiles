{
	// general editor settings
	"terminal.external.osxExec": "iTerm.app",
	"editor.lineNumbers": "on",
	"editor.fontSize": 12,
	"editor.rulers": [72, 120],
	"editor.wordWrap": "bounded",
	"editor.wordWrapColumn": 100,
	"editor.minimap.enabled": true,
	"window.nativeTabs": false,
	"editor.renderWhitespace":"boundary",

	// languages
	"[python]": {
		"editor.tabSize": 4,
		"editor.formatOnSave": false
	},
	"[vue]": {
		"editor.tabSize": 2
	},
	"[c]": {
		"editor.tabSize": 4
	},
	"[cpp]": {
		"editor.tabSize": 4
	},
	"[dockerfile]": {
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.tabSize": 2
	},
	"[javascriptreact]": {
		"editor.tabSize": 2
	},
	"[typescriptreact]": {
		"editor.tabSize": 2
	},
	"[latex]": {
		"editor.wordWrapColumn": 100,
		"editor.tabSize": 4
	},
	"[shellscript]": {
	},
	"[makefile]": {
	},
	"[yaml]": {
		"editor.tabSize": 2,
	},
	"[json]": {
		"editor.wordWrapColumn": 5000,
	},
	"[markdown]": {
		"editor.tabSize": 4,
		"editor.wordWrap": "bounded",
		"editor.wordWrapColumn": 100,
	},

	// linting style, provider: pylint, pep8, flake8, mypy, pylama
	"python.linting.enabled": true,
	"python.linting.lintOnSave": true,
	"python.linting.maxNumberOfProblems": 50,
	"python.linting.pylintArgs": ["--errors-only"],
	"python.linting.pycodestyleEnabled": false,
	"python.linting.flake8Enabled": false,
	"python.linting.mypyEnabled": false,
	"python.linting.pylamaEnabled": false,

	// virtual env
	// "python.venvPath": "venv/bin/python",

	// auto-formatting, provider: autopep8 or yapf, install use pip

	// auto-complete
	"python.autoComplete.extraPaths": [
		"/usr/local/lib/python3.6/site-packages",
		"/usr/local/lib/python3.7/site-packages"
	],

	// jupyter settings
	"python.jupyter.defaultKernel": "Python 3",
	"python.jupyter.startupCode": [
		"%matplotlib inline"
	],
	"python.jupyter.appendResults": true,
	"jupyter.appendResults": true,
	"jupyter.notebook.startupArgs": [
		"--no-browser",
		"--port=8888",
		"--NotebookApp.allow_origin=\"*\""
	],

	// pandoc
	"pandoc.pdfOptString": "--latex-engine=xelatex --listings",
	"terminal.integrated.commandsToSkipShell": [
		"editor.action.toggleTabFocusMode",
		"workbench.action.debug.continue",
		"workbench.action.debug.pause",
		"workbench.action.debug.restart",
		"workbench.action.debug.run",
		"workbench.action.debug.start",
		"workbench.action.debug.stop",
		"workbench.action.focusActiveEditorGroup",
		"workbench.action.focusFirstEditorGroup",
		"workbench.action.focusSecondEditorGroup",
		"workbench.action.focusThirdEditorGroup",
		"workbench.action.openNextRecentlyUsedEditorInGroup",
		"workbench.action.openPreviousRecentlyUsedEditorInGroup",
		"workbench.action.quickOpen",
		"workbench.action.showCommands",
		"workbench.action.terminal.clear",
		"workbench.action.terminal.copySelection",
		"workbench.action.terminal.focus",
		"workbench.action.terminal.focusAtIndex1",
		"workbench.action.terminal.focusAtIndex2",
		"workbench.action.terminal.focusAtIndex3",
		"workbench.action.terminal.focusAtIndex4",
		"workbench.action.terminal.focusAtIndex5",
		"workbench.action.terminal.focusAtIndex6",
		"workbench.action.terminal.focusAtIndex7",
		"workbench.action.terminal.focusAtIndex8",
		"workbench.action.terminal.focusAtIndex9",
		"workbench.action.terminal.focusNext",
		"workbench.action.terminal.focusPrevious",
		"workbench.action.terminal.kill",
		"workbench.action.terminal.new",
		"workbench.action.terminal.paste",
		"workbench.action.terminal.runActiveFile",
		"workbench.action.terminal.runSelectedText",
		"workbench.action.terminal.scrollDown",
		"workbench.action.terminal.scrollDownPage",
		"workbench.action.terminal.scrollToBottom",
		"workbench.action.terminal.scrollToTop",
		"workbench.action.terminal.scrollUp",
		"workbench.action.terminal.scrollUpPage",
		"workbench.action.terminal.toggleTerminal"
	],
	"terminal.integrated.scrollback": 100000,
	"window.zoomLevel": 1,
	"latex-workshop.chktex.enabled": false,
	"explorer.confirmDragAndDrop": false,
	"problems.decorations.enabled": true,
	"material-icon-theme.folders.theme": "specific",
	"extensions.ignoreRecommendations": true,
	"go.buildOnSave": "off",
	"go.testTimeout": "60m",
	"go.testFlags": [
		"-v",
		"-race"
	],
	"breadcrumbs.enabled": true,
	"files.autoSave": "off",
	"explorer.confirmDelete": false,
	"git.autofetch": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"latex-workshop.latex.autoBuild.run": "never",
	"latex-workshop.latex.autoClean.run": "onBuilt",
	"C_Cpp.updateChannel": "Insiders",
	"vsicons.dontShowNewVersionMessage": true,
	"go.formatTool": "goimports",
	"editor.fontFamily": "'Source Code Pro for Powerline', Menlo, Monaco, 'Courier New', monospace",
	"diffEditor.ignoreTrimWhitespace": false,
	"workbench.iconTheme": "vscode-icons",
	"go.gopath": "~/go",
	"go.goroot": "~/goes/go",
	"files.associations": {
		"*.go2": "go"
	},
	"workbench.editor.scrollToSwitchTabs": true,
	"latex-workshop.view.pdf.viewer": "tab",
	"glsl-linter.validatorPath": "/usr/local/bin/glslangValidator",
	"glsl-linter.fileExtensions": {
		".fs.glsl": "frag",
		".vs.glsl": "vert",
		".tes.glsl": "tese",
		".tcs.glsl": "tesc",
		".gs.glsl": "geom"
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"window.autoDetectColorScheme": true,
	"grammarly.userWords": [
		"Changkun",
		"GothamGo",
		"funcdata",
		"gccgo",
		"golang",
		"mcache",
		"mcentral",
		"percpu",
		"pprof",
		"redir",
		"redis",
		"tcmalloc",
		"url"
	],
	"grammarly.autoActivate": false,
}